{
  "name": "reactbase",
  "version": "1.2.0",
  "description": "Base react project",
  "main": "index.js",
  "scripts": {
    "build:dev": "NODE_ENV=development webpack --output-path public && babel src -d build --ignore src/client",
    "build:prod": "NODE_ENV=production webpack --output-path public && babel src -d build --ignore src/client",
    "docker:build": "docker-compose build",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "lint": "eslint src",
    "start": "NODE_ENV=production npm run build:prod && NODE_ENV=production node build/server/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm run watch:client & npm run watch:server",
    "watch:client": "NODE_ENV=development webpack -p -w",
    "watch:server": "babel -w src -d build --ignore src/client & nodemon build/server/index.js"
  },
  "pre-commit": [
    "lint"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.17.1",
    "compression-webpack-plugin": "^1.0.0",
    "css-loader": "^0.28.1",
    "express": "^4.15.2",
    "node-sass": "^4.5.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "sass-loader": "^6.0.5",
    "sequelize": "^4.10.0",
    "style-loader": "^0.17.0",
    "webpack": "^2.5.1",
    "webpack-livereload-plugin": "^0.11.0"
  },
  "devDependencies": {
    "eslint": "^4.7.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2"
  }
}
